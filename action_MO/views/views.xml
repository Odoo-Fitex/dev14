<odoo>
    <data>

        <record id="view_mrp_fodrm_production_info_form" model="ir.ui.view">
            <field name="name">videw.mrp_production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[2]" position="before">
                    <group name="specifications" string="Specifications">
                        <field name="weight" string="M^2_Weight"/>
                        <field name="width" string="Width"/>
                        <field name="gouge" string="Gouge"/>
                        <field name="inch" string="Inch"/>
                        <field name="barcode" string="Barcode"/>
                        <field name="workcenter_number"/>
                    </group>

                    <group name="quantity" string="Quantity">
                        <field name="actual_order_qty"
                               attrs="{'readonly': [('state', '!=', 'draft'),('state', '!=', 'progress')]}"/>
                        <field name="remaining_qty"/>
                        <field name="total_qty_done"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="lot_id"/>
                </xpath>
            </field>
        </record>
        <record id="view_mrp_pcartial_production_tree" model="ir.ui.view">
            <field name="name">view.mrp_cproduction.tree</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_qty']" position="after">
                    <field name="workcenter_number"/>
                    <field name="remaining_qty"/>
                    <field name="total_qty_done"/>
                </xpath>
            </field>
        </record>

        <record id="view_mrp_notces" model="ir.ui.view">
            <field name="name">view.mrp_pcroduction.notes</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group/field[@name='location_dest_id']" position="after">
                    <field name="notes"/>
                </xpath>
            </field>
        </record>


